<Page
    x:Class="SimpleWebView.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleWebView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <WebView x:Name="wvc" HorizontalAlignment="Center" Height="400" VerticalAlignment="Top" Width="1740" RenderTransformOrigin="0.26,0.557" Margin="0,0,-2,0"/>
        <TextBox x:Name="path" HorizontalAlignment="Left" Margin="10,409,0,0" Text="http://127.0.0.1:8080/test.html" VerticalAlignment="Top" Width="279" Height="40" TextAlignment="Left" FontFamily="Microsoft Sans Serif" FontSize="12" FontWeight="Bold" FontStyle="Normal" InputScope="Default" CompositeMode="Inherit"/>
        <Button x:Name="button1" Content="Run" HorizontalAlignment="Left" Margin="341,409,0,0" VerticalAlignment="Top" Width="96" Height="40" RenderTransformOrigin="0.478,0.556" FontWeight="Bold" FontFamily="Microsoft Sans Serif" FontSize="12" Background="Red" Foreground="White" Click="button1_Click"/>
    </Grid>
</Page>
